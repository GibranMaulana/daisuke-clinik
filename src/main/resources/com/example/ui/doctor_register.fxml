<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.DoctorRegisterController"
      alignment="CENTER"
      spacing="10"
      prefWidth="400" prefHeight="350"
      style="-fx-background-color: #2b2b2b;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register as New Doctor"
           style="-fx-text-fill: #ffffff; -fx-font-size: 18px;"/>

    <TextField fx:id="nameField"
               promptText="Full Name"
               style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>

    <TextField fx:id="specialtyField"
               promptText="Specialty"
               style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>

    <Button text="Register Doctor"
            onAction="#onRegisterDoctorClicked"
            style="-fx-background-color: #00bfa5; -fx-text-fill: #2b2b2b;"/>
    
    <Label fx:id="statusLabel"
           text=""
           style="-fx-text-fill: #ff5555; -fx-font-size: 14px;"/>

    <Button text="Back to Login"
            onAction="#onBackClicked"
            style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>
</VBox>
