<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400" prefHeight="300"
      style="-fx-background-color: #2b2b2b;">

    <!-- Title -->
    <Label text="Clinic Management"
           style="-fx-text-fill: #00bfa5; -fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Doctor Button -->
    <Button text="Doctor Login / Register"
            fx:id="doctorButton"
            onAction="#onDoctorClicked"
            prefWidth="200"
            style="-fx-background-color: #00bfa5; -fx-text-fill: #2b2b2b;"/>

    <!-- Patient Button -->
    <Button text="Make Appointment (Patient)"
            fx:id="patientButton"
            onAction="#onPatientClicked"
            prefWidth="200"
            style="-fx-background-color: #00bfa5; -fx-text-fill: #2b2b2b;"/>
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
