<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ui.PatientLoginController"
          alignment="CENTER"
          style="-fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-background-color: #F8F9FA;">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER" prefWidth="500"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints minHeight="40" maxHeight="40"/>
    </rowConstraints>

    <!-- Main Content Area -->
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" 
          alignment="CENTER" spacing="30" style="-fx-background-color: #F8F9FA; -fx-padding: 20; -fx-spacing: 30;"
          fillWidth="true" maxWidth="500" minWidth="400">
        
        <!-- Welcome Section -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-spacing: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" spacing="20" alignment="CENTER" maxWidth="450">
            <HBox spacing="15" alignment="CENTER">
                <FontIcon iconLiteral="fas-user-injured" iconSize="32" iconColor="#667eea" />
                <Label text="Patient Login" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
            </HBox>
            <Label text="Access your medical records and appointments" 
                   style="-fx-text-fill: #6C757D; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 14px;" textAlignment="CENTER" wrapText="true"/>
            <Separator prefWidth="300"/>
        </VBox>

        <!-- Login Form -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-spacing: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" spacing="20" maxWidth="450">
            <Label text="Login Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
            
            <VBox spacing="15">
                <VBox spacing="5">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <FontIcon iconLiteral="fas-user" iconSize="14" iconColor="#6C757D" />
                        <Label text="Username" style="-fx-text-fill: #6C757D; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    </HBox>
                    <TextField fx:id="usernameField"
                               promptText="Enter your username..."
                               prefHeight="40"/>
                </VBox>

                <VBox spacing="5">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <FontIcon iconLiteral="fas-lock" iconSize="14" iconColor="#6C757D" />
                        <Label text="Password" style="-fx-text-fill: #6C757D; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    </HBox>
                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password..."
                                   prefHeight="40"/>
                </VBox>
            </VBox>

            <VBox spacing="15" alignment="CENTER">
                <Button text="Login to Dashboard"
                        onAction="#onLoginClicked"
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 16px; -fx-padding: 12 24; -fx-background-radius: 6; -fx-cursor: hand; -fx-graphic-text-gap: 12;"
                        prefWidth="200"
                        prefHeight="45">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-in-alt" iconSize="16" iconColor="white" />
                    </graphic>
                </Button>

                <Label fx:id="statusLabel" text="" 
                       style="-fx-font-size: 14px; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
            </VBox>
        </VBox>

        <!-- Help Section -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15; -fx-spacing: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" alignment="CENTER" spacing="15" maxWidth="450">
            <Label text="Don't have an account?" style="-fx-text-fill: #6C757D; -fx-font-size: 14px; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-weight: bold;"/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="Register as Patient"
                        onAction="#onRegisterClicked"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand; -fx-graphic-text-gap: 8;">
                    <graphic>
                        <FontIcon iconLiteral="fas-user-plus" iconSize="14" iconColor="white" />
                    </graphic>
                </Button>
                <Button text="Back to Main"
                        onAction="#onBackClicked"
                        style="-fx-background-color: transparent; -fx-text-fill: #6C757D; -fx-border-color: #6C757D; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-graphic-text-gap: 8;">
                    <graphic>
                        <FontIcon iconLiteral="fas-arrow-left" iconSize="14" iconColor="#6C757D" />
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </VBox>

    <!-- Status Bar -->
    <HBox style="-fx-background-color: #272757; -fx-padding: 8 15;" 
          GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <Label text="Patient Portal" 
               style="-fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Hospital Management System" 
               style="-fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px;"/>
    </HBox>

</GridPane>
