<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ui.DoctorLoginController"
      alignment="CENTER"
      spacing="10"
      style="-fx-background-color: #2b2b2b;"
      prefWidth="400" prefHeight="300">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Doctor Login"
           style="-fx-text-fill: #ffffff; -fx-font-size: 18px;"/>

    <TextField fx:id="doctorIdField"
               promptText="Doctor ID"
               style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-background-color: #3c3c3c; -fx-text-fill: #ffffff;"/>

    <Button text="Login"
            onAction="#onLoginClicked"
            style="-fx-background-color: #00bfa5; -fx-text-fill: #2b2b2b;"/>

    <Button text="Register as New Doctor"
            onAction="#onRegisterClicked"
            style="-fx-background-color: #00bfa5; -fx-text-fill: #2b2b2b;"/>
    
    <Button text="back to landing Page"
            onAction="#onBackClicked"
            style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"/>
</VBox>
