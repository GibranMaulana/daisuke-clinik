<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ui.DoctorLoginController"
          style="-fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-background-color: #F8F9FA;">

    <!-- Define column constraints -->
    <columnConstraints>
        <ColumnConstraints percentWidth="100" halignment="CENTER"/>
    </columnConstraints>
    
    <!-- Define row constraints -->
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>     <!-- Header -->
        <RowConstraints vgrow="ALWAYS"/>    <!-- Main content -->
        <RowConstraints vgrow="NEVER"/>     <!-- Status bar -->
    </rowConstraints>

    <!-- Header -->
    <VBox style="-fx-background-color: #272757; -fx-padding: 20; -fx-spacing: 10;" 
          GridPane.rowIndex="0" GridPane.columnIndex="0">
        <HBox spacing="15" alignment="CENTER">
            <FontIcon iconLiteral="fas-user-md" iconSize="32" iconColor="white" />
            <Label text="Doctor Portal" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
        </HBox>
        <Label text="Secure physician access" 
               style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
    </VBox>

    <!-- Main Content Area -->
    <VBox alignment="CENTER" spacing="30" 
          style="-fx-background-color: #F8F9FA; -fx-padding: 20;" 
          GridPane.rowIndex="1" GridPane.columnIndex="0">
        
        <!-- Login Card -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-spacing: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" 
              alignment="CENTER" spacing="25" maxWidth="450" prefWidth="450">
            <Label text="Doctor Login" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
            <Label text="Please enter your credentials to access the system" 
                   style="-fx-text-fill: #6C757D; -fx-font-size: 12px; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;" 
                   textAlignment="CENTER" wrapText="true"/>
            
            <!-- Form Fields -->
            <VBox spacing="20" prefWidth="350">
                <!-- Doctor ID Field -->
                <VBox spacing="8" style="-fx-spacing: 15; -fx-alignment: center-left;">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <FontIcon iconLiteral="fas-id-badge" iconSize="16" iconColor="#2C2C54" />
                        <Label text="Doctor ID" 
                               style="-fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
                    </HBox>
                    <TextField fx:id="doctorIdField"
                              promptText="Enter your doctor ID"
                              style="-fx-background-color: white; -fx-border-color: #8686AC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12 15; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                              prefHeight="45"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8" style="-fx-spacing: 15; -fx-alignment: center-left;">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <FontIcon iconLiteral="fas-lock" iconSize="16" iconColor="#2C2C54" />
                        <Label text="Password" 
                               style="-fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
                    </HBox>
                    <PasswordField fx:id="passwordField"
                                  promptText="Enter your password"
                                  style="-fx-background-color: white; -fx-border-color: #8686AC; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12 15; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                                  prefHeight="45"/>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <VBox spacing="15" alignment="CENTER" prefWidth="350">
                <Button text="Login"
                        onAction="#onLoginClicked"
                        style="-fx-background-color: #272757; -fx-text-fill: white; -fx-font-family: 'Roboto Medium', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 16px; -fx-padding: 15 25; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 2); -fx-graphic-text-gap: 12;"
                        prefWidth="300"
                        prefHeight="45">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-in-alt" iconSize="18" iconColor="white" />
                    </graphic>
                </Button>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Back"
                            onAction="#onBackClicked"
                            style="-fx-background-color: #8686AC; -fx-text-fill: white; -fx-font-family: 'Roboto Medium', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 2); -fx-graphic-text-gap: 10;"
                            prefWidth="140">
                        <graphic>
                            <FontIcon iconLiteral="fas-arrow-left" iconSize="16" iconColor="white" />
                        </graphic>
                    </Button>
                    <Button text="Register"
                            onAction="#onRegisterClicked"
                            style="-fx-background-color: #8686AC; -fx-text-fill: white; -fx-font-family: 'Roboto Medium', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 2); -fx-graphic-text-gap: 10;"
                            prefWidth="140">
                        <graphic>
                            <FontIcon iconLiteral="fas-user-plus" iconSize="16" iconColor="white" />
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
        
        <!-- Help Section -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-spacing: 10; -fx-border-color: #8686AC; -fx-border-radius: 8; -fx-border-width: 1;" 
              alignment="CENTER" spacing="10" maxWidth="450">
            <HBox spacing="8" alignment="CENTER">
                <FontIcon iconLiteral="fas-shield-alt" iconSize="18" iconColor="#8686AC" />
                <Label text="Secure Access" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C2C54; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;"/>
            </HBox>
            <Label text="Your credentials are encrypted and secure. Contact IT support if you need assistance accessing your account." 
                   style="-fx-text-fill: #6C757D; -fx-font-size: 12px; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;" 
                   textAlignment="CENTER" wrapText="true"/>
        </VBox>
    </VBox>
    
    <!-- Status Bar -->
    <HBox style="-fx-background-color: #272757; -fx-padding: 8 15;" 
          GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Label text="Doctor Portal" 
               style="-fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Ready" 
               style="-fx-text-fill: white; -fx-font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif; -fx-font-size: 12px;"/>
    </HBox>
</GridPane>
